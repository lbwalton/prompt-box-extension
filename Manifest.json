{
  "manifest_version": 3,
  "name": "Prompt Box",
  "version": "2.1",
  "description": "Store and organize your AI prompts",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Box"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "test-auth.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}